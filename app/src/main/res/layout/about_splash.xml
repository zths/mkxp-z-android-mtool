<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/app_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/version_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textSize="16sp" />

    <!-- 添加插件使用提示文本 -->
    <TextView
        android:id="@+id/plugin_notice_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/version_text"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        android:gravity="center"
        android:padding="16dp"
        android:background="#E8F0FE"
        android:textColor="#6790FF"
        android:text="@string/plugin_notice"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/attribution_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/project_attribution"
        android:textSize="14sp" />

</RelativeLayout>
